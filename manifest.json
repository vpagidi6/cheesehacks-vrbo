{
  "manifest_version": 3,
  "name": "AI Token Tracker",
  "version": "1.0.0",
  "description": "Track your LLM token usage and environmental impact",
  "permissions": ["storage"],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*",
    "https://claude.ai/*",
    "https://gemini.google.com/*",
    "https://aistudio.google.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*",
        "https://aistudio.google.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": { "service_worker": "background.js" },
  "action": {
    "default_popup": "dashboard/popup.html",
    "default_title": "AI Token Tracker"
  }
}
